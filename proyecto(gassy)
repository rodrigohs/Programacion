void zona() {
	int option;
	do {
		cout << "Ingrese en que zona se encuentra: " << endl;
		cout << "Opcion 1. Norte" << endl;
		cout << "Opcion 2. Sur" << endl;
		cout << "Opcion 3. Este" << endl;
		cout << "Opcion 4. Oeste" << endl;
		cout << "Opcion 0. Salir del programa" << endl;
		cout << "Opcion: ";
		cin >> option;
			switch (option) {
			case 1:
				system("cls");
				anillo(option);
				break;
			case 2:
				system("cls");
				anillo(option);
				break;
			case 3:
				system("cls");
				anillo(option);
				break;
			case 4:
				system("cls");
				anillo(option);
				break;
			case 0:
				cout << "Saliendo del programa";
				_getch();
				exit(0);
				break;
			default:
				system("cls");
				cout << "Opcion invalida" << endl;
				_getch();
				system("cls");
				break;
			}
	} while (option != 0);
	_getch();
}
void anillo(int a) {
	int option;
	do {
		cout << "Ingrese aproximadamente cerca de que anillo se encuentra: " << endl;
		cout << "Opcion 1. 	2do Anillo" << endl;
		cout << "Opcion 2.	3er Anillo" << endl;
		cout << "Opcion 3. 	4to Anillo" << endl;
		cout << "Opcion 4.  Volver" << endl;

		cout << "Opcion 0. Salir del programa" << endl;
		cout << "Opcion: ";
		cin >> option;
		switch (option) {
		case 1:
			system("cls");
			switch (a) {
			case 1:
				cout << "SUs opciones son: " << endl;
				nortesegundo();
				_getch();
				system("cls");
				volver();

				break;
			case 2:
				cout << "SUs opciones son: " << endl;
				sursegundo();
				_getch();
				system("cls");
				volver();
				break;
			case 3:
				cout << "SUs opciones son: " << endl;
				estesegundo();
				_getch();
				system("cls");
				volver();
				break;
			case 4:
				cout << "SUs opciones son: " << endl;
				oestesegundo();
				_getch();
				system("cls");
				volver();
				break;
			}
			break;
		case 2:
			system("cls");
			switch (a) {
			case 1:
				cout << "SUs opciones son: " << endl;
				nortetercero();
				_getch();
				system("cls");
				volver();
				break;
			case 2:
				cout << "SUs opciones son: " << endl;
				surtercero();
				_getch();
				system("cls");
				volver();
				break;
			case 3:
				cout << "SUs opciones son: " << endl;
				estetercero();
				_getch();
				system("cls");
				volver();
				break;
			case 4:
				cout << "SUs opciones son: " << endl;
				oestetercero();
				_getch();
				system("cls");
				volver();
				break;
			}
			break;
		case 3:
			system("cls");
			switch (a) {
			case 1:
				cout << "SUs opciones son: " << endl;
				nortecuarto();
				_getch();
				system("cls");
				volver();
				break;
			case 2:
				cout << "SUs opciones son: " << endl;
				surcuarto();
				_getch();
				system("cls");
				volver();
				break;
			case 3:
				cout << "SUs opciones son: " << endl;
				estecuarto();
				_getch();
				system("cls");
				volver();
				break;
			case 4:
				cout << "SUs opciones son: " << endl;
				oestecuarto();
				_getch();
				system("cls");
				volver();
				break;
			}
			break;
		case 4:
			system("cls");
			cout << "Volver";
			system("cls");
			zona();
			break;
		case 0:
			system("cls");
			cout << "Saliendo del programa";
			exit(0);
		default:
			system("cls");
			cout << "Opcion invalida";
			break;
		}
		_getch();
		system("cls");
	} while (option != 0);
	_getch();
}

void volver() {
	int option1;
	cout << "Desea volver al menu principal?" << endl;
	cout << "Opcion 1. Si" << endl;
	cout << "Aprete cualquier tecla para salir" << endl;
	cin >> option1;
	if (isdigit(option1) != 0) {
		cout << "Opcion invalida y saliendo del programa porque no presta atencion a las opciones";
		exit(0);
	}
	switch (option1) {
	case 1:
		system("cls");
		zona();
		break;
	default:
		exit(0);
	}
}

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{
	int n,c=0,s=-1;
		cout<<"ingrese un valor"<<endl;
		cin>>n;
		for(int i=1;i<=n;i++){
		c=c+2*s*i;
		s=-s;
		}
		cout<<"la suma es"<<c<<endl;
		
getch();


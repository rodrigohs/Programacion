#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100
using namespace std;
	
	double promedio(double a[],int tamanio);
    void cargar (double a[],int tamanio);
	void mostrar (double a[],int tamanio);
	void invertir(double a[],int tamanio);

	void main()
{
		int N;
		double a[MAX],prom;
	do {
		cout<<"ingrese el numero de elementos del vector"<<endl;
		cin>> N;
	} while((N<=0)|| (N>100));
	   
	   cargar(a,N);
	   prom=promedio(a,N);
	   mostrar(a,N);
	   cout<<"el promedio es"<<prom<<endl;
	   invertir(a,N);
	   getch();
} 
	 void cargar(double a[],int tamanio)
	 {
		 for(int i=0;i<tamanio;i++)
		 {
			cout<<"a["<<i<<"]"<<endl;
			cin>>a[i];
		 }

	 }

	 double promedio(double a[],int tamanio)
	 {
		 double p,suma=0;
		 for(int i=0;i<tamanio;i++)
			 suma=suma+a[];
		     p=suma/tamanio;
			 return p;
	 }
	 
	 void mostrar(double a[],int tamanio)
	 {
		  for(int i=0;i<tamanio;i++)
		 cout<<"a["<<i<<"]"<<a[i]<<endl;
	 }
	 void invertir(double a[],int tamanio)
	 {
		 double aux;
		 for(int i=0;i<tamanio/2;i++){
			 aux= a[tamanio-1-i];
		 a[tamanio-1-i]=a[i];
		 a[i]=aux; }
		 mostrar(a,tamanio);
